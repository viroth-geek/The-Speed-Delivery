<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorDeliverPrimary</item>
        <item name="colorPrimaryDark">@color/colorDeliverPrimaryDark</item>
        <item name="colorAccent">@color/colorDeliverAccent</item>
        <item name="android:buttonStyle">@style/ButtonWithoutCorner</item>
        <item name="android:actionButtonStyle">@style/ActionButton</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Delivery.NoActionBar" parent="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RelativeLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@color/buttonColorDeliverBackground</item>
    </style>

    <!-- Button Style -->
    <style name="ButtonWithCorner" parent="Widget.AppCompat.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/textColorDeliverWhite</item>
        <!--<item name="android:shadowColor">@color/textColorDeliverWhiteShadow</item>-->
        <!--<item name="android:shadowDx">0</item>-->
        <!--<item name="android:shadowDy">-1</item>-->
        <!--<item name="android:shadowRadius">0.2</item>-->
        <!--<item name="android:textStyle">bold</item>-->
        <item name="android:textSize">@dimen/text_size_T3</item>
        <item name="android:background">@drawable/selector_button_corner</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_height">27dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonCornerReverse" parent="Widget.AppCompat.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@drawable/selector_text_color_primary_reverse</item>
        <item name="android:textSize">@dimen/text_size_T3</item>
        <item name="android:background">@drawable/selector_button_corner_reverse</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_height">27dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonWithoutCorner" parent="Widget.AppCompat.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/textColorDeliverWhite</item>
        <item name="android:textSize">@dimen/text_size_T3</item>
        <item name="android:background">@color/buttonColorDeliverBackground</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_height">27dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonPrimary" parent="Widget.AppCompat.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@drawable/selector_text_color_primary</item>
        <item name="android:background">@drawable/shape_button_bg_primary</item>
        <item name="android:layout_margin">@dimen/margin_length_10</item>
        <item name="android:clickable">true</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonPrimaryReverse" parent="Widget.AppCompat.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@drawable/selector_text_color_primary_reverse</item>
        <item name="android:background">@drawable/shape_button_bg_primary_reverse</item>
        <item name="android:layout_margin">@dimen/margin_length_10</item>
        <item name="android:clickable">true</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BannerRoundReverse">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">@dimen/text_size_T3</item>
        <item name="android:background">@drawable/selector_button_corner_reverse</item>
    </style>

    <!-- TextView Style -->
    <style name="TextViewDeliverDark" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/textColorDeliverDark</item>
        <item name="android:textSize">@dimen/text_size_T3</item>
        <!--<item name="android:textStyle">bold</item>-->
    </style>

    <style name="TextViewDeliverWhite" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/textColorDeliverWhite</item>
        <item name="android:textSize">@dimen/text_size_T3</item>
        <!--<item name="android:textStyle">bold</item>-->
    </style>

    <!-- Article Formal -->
    <style name="TextViewHeader0" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textSize">@dimen/text_size_T9</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewHeader1" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textSize">@dimen/text_size_T8</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewHeader2" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textSize">@dimen/text_size_T7</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewHeader3" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textSize">@dimen/text_size_T4</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewItemsCount" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:textColor">@color/colorDeliverPrimary</item>
        <item name="android:textSize">@dimen/text_size_T2</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewHeaderA0" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textSize">@dimen/text_size_T9</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewHeaderA1" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textSize">@dimen/text_size_T8</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewHeaderA2" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textSize">@dimen/text_size_T7</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewHeaderA3" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textSize">@dimen/text_size_T4</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewHeaderA4" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textSize">@dimen/text_size_T2</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewParagraphNormal" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">@dimen/text_size_T3</item>
        <item name="android:textStyle">normal</item>
        <item name="android:width">0dp</item>
    </style>

    <style name="TextViewParagraphBold" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">@dimen/text_size_T3</item>
        <item name="android:textStyle">bold</item>
        <item name="android:width">0dp</item>
    </style>

    <style name="TextViewParagraphItalic" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">@dimen/text_size_T1</item>
        <item name="android:textStyle">italic</item>
        <item name="android:width">0dp</item>
    </style>

    <style name="TextViewDefault" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">@dimen/text_size_T3</item>
        <item name="android:color">@android:color/tab_indicator_text</item>
    </style>

    <style name="TextViewRemark" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">@dimen/text_size_T2</item>
        <item name="android:textStyle">normal</item>
        <item name="android:color">@color/green</item>
    </style>

    <style name="TextViewSecondary" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">@dimen/text_size_T2</item>
        <item name="android:color">@color/green</item>
    </style>

    <style name="TextViewDanger" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">@dimen/text_size_T2</item>
        <item name="android:color">@color/red</item>
    </style>

    <!-- Dialog -->
    <style name="NkrDialog" parent="AppTheme">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:gravity">center</item>
    </style>


    <!-- Image -->
    <style name="DeliveryImageI" parent="Base.Widget.AppCompat.ImageButton">
        <item name="android:background">@color/colorDeliverBackgroundLightGrayI</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ActionButton" parent="@android:style/Widget.ActionButton">
        <item name="android:drawablePadding">4dp</item>
    </style>
</resources>
