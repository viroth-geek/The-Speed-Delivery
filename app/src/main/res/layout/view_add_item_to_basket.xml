<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_box_gradient"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="3"
            android:layout_margin="@dimen/margin_length_5"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_basket_item_count"
                style="@style/TextViewHeaderA3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="0 item(s)"/>

            <TextView
                android:id="@+id/txt_basket_item_price"
                style="@style/TextViewHeaderA2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="$ 0.00"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_basket"
            android:layout_weight="1"
            android:text="Add Item"
            android:layout_width="@dimen/button_width_length_100"
            android:layout_height="wrap_content"
            style="@style/ButtonPrimary"/>
    </LinearLayout>
</LinearLayout>
