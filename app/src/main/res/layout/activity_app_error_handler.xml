<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTransparency"
    tools:context="com.planb.thespeed.activity.AppErrorHandlerActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:padding="@dimen/margin_length_10"
        android:layout_margin="@dimen/margin_length_10"
        android:layout_width="match_parent"
        android:background="@drawable/shape_button_bg_primary_reverse"
        android:layout_height="100dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/img_error"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/default_w200h200_no_internet"/>
        <TextView
            android:id="@+id/txt_message"
            android:layout_marginLeft="@dimen/margin_length_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_T3"
            android:text="No Internet Connection."/>
    </LinearLayout>
</LinearLayout>
