<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorTransparencyGray"/>
    <WebView
        android:id="@+id/web_view"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <LinearLayout
        android:layout_marginBottom="@dimen/margin_length_20"
        android:layout_marginTop="@dimen/margin_length_20"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/simple_font_size"
            android:text="\@2017 The Speed Delivery mad in Cambodia."/>
        <TextView
            android:focusable="true"
            android:clickable="true"
            android:id="@+id/txt_term"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/green"
            android:textSize="@dimen/simple_font_size"
            android:text="Term and Condition"/>
        <TextView
            android:focusable="true"
            android:clickable="true"
            android:id="@+id/txt_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/green"
            android:textSize="@dimen/simple_font_size"
            android:text="Privacy Policy"/>
        <TextView
            android:id="@+id/txt_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewHeaderA4"
            android:textSize="@dimen/simple_font_size"
            android:text="Version 1.0"/>
    </LinearLayout>

</LinearLayout>
