<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_product_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/margin_length_5"
    android:paddingBottom="@dimen/margin_length_5"
    android:paddingLeft="@dimen/margin_length_20"
    android:paddingRight="@dimen/margin_length_20"
    android:layout_margin="5dp"
    android:gravity="center_vertical"
    android:background="@drawable/selector_selected_items">

    <ImageView
        android:id="@+id/img_store_logo"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_width="@dimen/search_product_img_width"
        android:layout_height="@dimen/search_product_img_height"
        android:background="@color/colorDeliverBackgroundLightGrayI"/>

    <LinearLayout
        android:layout_marginLeft="@dimen/margin_length_5"
        android:layout_centerVertical="true"
        android:id="@+id/container_product_info"
        android:layout_toRightOf="@id/img_store_logo"
        android:layout_toLeftOf="@id/txt_is_open"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_store_name"
            style="@style/TextViewHeaderA4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHighlight="@color/yellow"
            android:text="Store Name"/>

        <TextView
            android:id="@+id/txt_store_desc"
            style="@style/TextViewParagraphItalic"
            android:textColor="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pizza mozzarella cheese "/>

    </LinearLayout>

    <TextView
        android:id="@+id/txt_is_open"
        android:layout_alignParentRight="true"
        android:textColor="@color/green"
        android:layout_centerVertical="true"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:paddingTop="3dp"
        android:gravity="right"
        android:text="Open"
        android:textAlignment="center"
        style="@style/BannerRoundReverse"/>

</RelativeLayout>