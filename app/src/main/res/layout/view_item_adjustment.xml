<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/AppTheme">

    <View
        android:id="@+id/fragment_outside_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorTransparency"
        android:clickable="true" />

    <LinearLayout
        android:id="@+id/container_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_address_dialog"
        android:background="@color/colorTransparency"
        android:clickable="false"
        android:padding="@dimen/margin_length_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:baselineAligned="true"
            android:clickable="false"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_box_i"
                android:orientation="horizontal"
                android:padding="@dimen/margin_length_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_length_5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_product_name"
                        style="@style/TextViewHeaderA3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_horizontal"
                        android:text="My Item"
                        android:textSize="@dimen/simple_font_size" />

                    <!--<View-->
                    <!--android:layout_marginBottom="@dimen/margin_length_5"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="1dp"-->
                    <!--android:background="@color/colorTransparencyGray"/>-->

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="@string/product_price"
                            android:textSize="@dimen/simple_font_size" />

                        <TextView
                            android:id="@+id/txt_product_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="$00.00"
                            android:textSize="@dimen/simple_font_size" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="Total Price"
                            android:textSize="@dimen/simple_font_size" />

                        <TextView
                            android:id="@+id/txt_item_total_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="$ 00.00"
                            android:textSize="@dimen/simple_font_size" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_remove"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_minus_red" />


                        <TextView
                            android:id="@+id/txt_amount"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/margin_length_5"
                            android:layout_marginRight="@dimen/margin_length_5"
                            android:gravity="center"
                            android:text="168"
                            android:textSize="@dimen/simple_font_size" />

                        <ImageView
                            android:id="@+id/img_add"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_add_green" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_update"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="@dimen/margin_length_8"
                        android:layout_marginBottom="@dimen/margin_length_8"
                        android:background="@drawable/corner_radius_button"
                        android:text="Update"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

