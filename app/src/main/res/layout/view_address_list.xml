<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/margin_length_3"
    android:layout_margin="@dimen/margin_length_3"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/img_address"
            android:padding="@dimen/margin_length_5"
            android:layout_margin="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_location" />

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@id/img_delete"
            android:layout_toRightOf="@id/img_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="left"
                android:textStyle="bold"
                android:id="@+id/txt_address_nick_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/simple_font_size"
                android:text="Home Address" />

            <TextView
                android:gravity="left"
                android:layout_below="@id/txt_address_nick_name"
                android:id="@+id/txt_address_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:textSize="@dimen/simple_font_size"
                android:text="#312, Sensok, Phnom Penh #312" />

            <TextView
                android:visibility="gone"
                android:gravity="left"
                android:textStyle="italic"
                android:textSize="@dimen/simple_font_size"
                android:textColor="@color/green"
                style="@style/TextViewDefault"
                android:layout_below="@id/txt_address_line"
                android:id="@+id/txt_address_postcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="121001" />
        </RelativeLayout>

        <ImageView
            android:visibility="gone"
            android:clickable="true"
            android:id="@+id/img_delete"
            android:layout_alignParentRight="true"
            android:padding="@dimen/margin_length_10"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_trash_red" />

    </RelativeLayout>
</android.support.v7.widget.CardView>